<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="100dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/widgetMonthLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/widget_bg_top" />
        
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/widget_bg_lower"
        android:orientation="horizontal"
        android:paddingRight="3dp" >

        <TextView
            android:id="@+id/widgetDateLabel"
            android:background="#000000"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:paddingLeft="8dp"
            android:textColor="#00FDFF"
            android:textSize="32dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp" />
        
        <ImageView
            android:id="@+id/widgetDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />
        
        <ImageView
            android:id="@+id/widgetEmblem"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|right" />
    </LinearLayout>

</LinearLayout>